<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/galaxy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="401dp"
        android:layout_height="599dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"


        android:layout_marginBottom="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="16dp"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.ceviche.sareb.salvisapp.FirebaseLoginActivity">

            <ImageView
                android:id="@+id/imagenPerfil"
                android:layout_width="238dp"
                android:layout_height="215dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"

                android:layout_marginTop="35px"
                android:layout_marginBottom="35px"

                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/acme"
                android:gravity="center"

                android:shadowColor="@color/pink"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="MyGalaxyCatalogue"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/txtLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/verdetransparente"
                android:hint="Email"
                android:inputType="text"

                android:maxLines="1" />

            <EditText
                android:id="@+id/txtLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/verdetransparente"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:maxLines="1" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRARSE"
                android:textSize="14sp" />

            <!--ATAJO-->
            <Button
                android:id="@+id/btnAnonimoLogin"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Ingresar de forma anonima"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


